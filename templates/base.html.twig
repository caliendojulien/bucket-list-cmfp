<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="icon" href="{{ asset('img/favicon.png') }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap"
          rel="stylesheet">{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<div class="container">
    <header>
        <img src="{{ asset('img/logo.png') }}" alt="logo"> Bucket list
        <nav>
            <ul>
                <li><a href="{{ path('main_index') }}">Accueil</a></li>
                <li><a href="{{ path('wish_wishes') }}">Tous les Wishs</a></li>
                <li><a href="{{ path('wish_ajouter') }}">Ajouter</a></li>
            </ul>
        </nav>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </header>
    <main>
        {% block body %}{% endblock %}
    </main>
    <footer>
        &copy; {{ 'now' | date('Y') }}
    </footer>
</div>
</body>
</html>
